@model ProdutoDto

<form method="post">
    <input asp-for="ProdutoId" hidden />
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header  text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Nome</h1>
                </div>
               @*  <div class="col-12 col-md-6 text-end">
                    <h6 class="text-warning"> @Model.Preco.ToString("c", new System.Globalization.CultureInfo("pt-PT"))</h6>
                </div> *@
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImagemUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge bg-primary bg-warning text-white p-10 border">@Model.Categoria</span>
                                    <p class="text-secondary pt-3">@Html.Raw(Model.Descricao)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 text-end">
                                    <label asp-for="Quantidade" class="control-label pt-2" style="font-size:20px;"></label>
                                </div>
                                <div class="col-6">
                                    <input asp-for="Quantidade" class="form-control" oninput="updateValues()" />
                                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 text-end">
                                    <h4 class="text-white">Porção:</h4>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-warning" id="porcao">@Model.Porcao</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 text-end">
                                    <h1 class="text-white">Preço:</h1>
                                </div>
                                <div class="col-6">
                                    <h1 class="text-warning" id="preco">@Model.Preco.ToString("c", new System.Globalization.CultureInfo("pt-PT"))</h1>
                                </div>
                            </div>
                            
                        </div>

                                                  
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Voltar à lista</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;">Adicionar ao carrinho</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function updateValues() {
            var quantidade = document.querySelector('input[name="Quantidade"]').value;
            var porcao = document.getElementById('porcao');
            var preco = document.getElementById('preco');

            var initialPorcao = @Model.Porcao; // replace with the initial value
            var initialPreco = @Model.Preco; // replace with the initial value

            porcao.textContent = initialPorcao * quantidade;
            preco.textContent = (initialPreco * quantidade).toFixed(2);
        }
    </script>
}

